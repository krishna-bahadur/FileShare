@model DownloadModel;
@{
    ViewData["Title"] = "File Share - Download";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-body text-center p-5">
                <h4 class="mb-4">📁 Your File is Ready</h4>

                <!-- File Info Display -->
                <div class="border border-1 border-dash rounded-3 p-4 bg-light mb-4">
                    <i class="fa-solid fa-file-arrow-down fs-1 text-success mb-3"></i>
                    <p class="text-primary mb-2">@Model.FileName</p>
                    
                    @{
                        string sizeText;
                        if (Model.FileSize > 1024 * 1024)
                        {
                            sizeText = (Model.FileSize / (1024.0 * 1024.0)).ToString("F2") + " MB";
                        }
                        else
                        {
                            sizeText = (Model.FileSize / 1024.0).ToString("F2") + " KB";
                        }
                    }

                    <p class="text-muted mb-3">
                        Size: @sizeText
                    </p>

                    @* Download Button *@
                    <a href="@Url.Action("Download", "Home", new { fileName = Model.FileKey })"
                       class="btn btn-success px-4">
                        <i class="fa-solid fa-download"></i> Download File
                    </a>
                </div>

                @* Share Again Section  *@
                <div class="mt-4">
                    <p class="text-muted small mb-3">
                        <i class="fa-solid fa-clock"></i> This link will expire in 24 hours
                    </p>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-sm">
                        <i class="fa-solid fa-plus"></i> Upload New File
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>